package exercico2;
import java.util.Scanner;

public class Exercico2 {
 
    double variavel; 
    static Scanner leia = new Scanner(System.in) ;
   
public static void main(String[] args) {
    
    System.out.println("Digite a o raio da sua circunferência: ") ;
    
    double variavel = leia.nextDouble() ;
    
    System.out.println("Os resultados são: ") ;
    System.out.println("O diametro da circunferência é: " + (variavel*2 )) ;
    System.out.println("O quadrante da circunferência é: " + (variavel/2)) ;

    }
